{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": false,
  "tekton": {
    "managerFilePatterns": [
      "/\\.yaml$/",
      "/\\.yml$/"
    ],
    "includePaths": [
      "tasks/rpms-signature-scan/0.2/**",
      ".tekton/**"
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "quay.io/konflux-ci/tools"
      ],
      "schedule": [
        "at any time"
      ]
    }
  ]
}
